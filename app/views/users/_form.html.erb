<div class="wrapper">
<div class="container">
<h1>アカウント作成</h1>
<%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    
    <div class="form">
     
      <%= form.text_field :name,placeholder:"UserName", id: :user_name %>
    </div>
  
    <div class="form">
      
      <%= form.text_field :email,placeholder:"Email", id: :user_email %>
    </div>
  
    <div class="form">
   
      <%= form.password_field :password,placeholder:"Password", id: :user_password %>
    </div>
  
    <div class="form">
      
      <%= form.password_field :password_confirmation,placeholder:"Password confirmation",id: :password_confirmation, id: :user_password_confirmation %>
    </div>
  
    <%= form.submit "作成",class:"button" %>
    
  <% end %>
  